<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Bottom Nav Theme -->
    <style name="Widget.HomeMockTest.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimary</item>
    </style>

    <style name="Widget.HomeMockTest.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">
            @style/Widget.HomeMockTest.BottomNavigationView.ActiveIndicator
        </item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="colorSecondaryContainer">?attr/colorSecondaryContainer</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.HomeMockTest.BottomNavigation
        </item>
    </style>

    <!--ToolBar Theme -->
    <style name="Widget.HomeMockTest.TextAppearance.Toolbar" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Menu Title Theme -->
    <style name="Widget.HomeMockTest.TextAppearance.MenuTitle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/matte_white</item>
    </style>
</resources>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.HomeMockTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Splash-->
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <!--Material type attributes-->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.HomeMockTest.Subtitle1</item>
        <item name="textAppearanceOverline">@style/TextAppearance.HomeMockTest.Overline</item>
        <!--Platform attributes-->
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:statusBarColor">@color/matte_black</item>
        <!--Default styles-->
        <item name="colorPrimary">@color/matte_white</item>
        <item name="colorOnPrimary">@color/matte_black</item>
        <item name="bottomNavigationStyle">@style/Widget.HomeMockTest.BottomNavigationView</item>
        <item name="android:itemTextAppearance">
            @style/Widget.HomeMockTest.TextAppearance.MenuTitle
        </item>
    </style>

    <!--Bottom Nav Theme -->
    <style name="TextAppearance.HomeMockTest.BottomNavigation" parent="TextAppearance.HomeMockTest.Caption">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <!--Bottom Nav Theme -->
    <style name="TextAppearance.HomeMockTest.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato</item>
    </style>

    <!--Default Theme -->
    <style name="HomeMockTest.Theme" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/matte_white</item>
        <item name="colorPrimaryVariant">@color/yellow_200</item>
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="colorSecondaryVariant">@color/yellow_400</item>
        <item name="colorOnPrimary">@color/matte_black</item>
        <item name="android:windowIsTranslucent">true</item>
        </style>
</resources>